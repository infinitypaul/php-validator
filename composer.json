{
    "name": "infinitypaul/php-validator",
    "description": "A validator featuring rule objects, string rule mapping, wildcard validation and more",
    "keywords": [
        "infinitypaul",
        "php-validator",
        "form validation",
        "request validation"
    ],
    "homepage": "https://github.com/infinitypaul/php-validator",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Paul Edward",
            "email": "infinitypaul@live.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Infinitypaul\\Validator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Infinitypaul\\Validator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
